_site () 
{ 
    local cur=${COMP_WORDS[COMP_CWORD]};
    COMPREPLY=($(compgen -W "$(ls ~/domains)" -- $cur))
}

site () 
{ 
    if [ $# -eq 0 ]; then
        DOMAIN=`pwd | cut --delimiter="/" -f 5`;
    else
        DOMAIN="$@";
    fi;
    if [ -d ~/domains/$DOMAIN ]; then
        cd ~/domains/$DOMAIN;
    else
        echo "Given website does not exists";
    fi
}
complete -F _site site

